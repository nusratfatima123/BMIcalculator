<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d3d3c3">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#b0b098"
        android:gravity="center"
        android:text="Exercise Plan"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="8dp" />

    <!-- BMI Result Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#E8EAF6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_dialog_dialer"
                    android:tint="#2196F3" />

                <TextView
                    android:id="@+id/bmiResultText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Your BMI: --"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <!-- New: Exercise Timer -->
                <Button
                    android:id="@+id/btnStartTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rounded_small"
                    android:text="â±ï¸ Timer"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />
            </LinearLayout>

            <!-- Exercise Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Goal:"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvExerciseGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="30-45 minutes"
                    android:textSize="16sp"
                    android:textColor="#2196F3"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Exercise Suggestions -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Exercise Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’ª Personalized Exercise Plan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:drawableStart="@android:drawable/ic_menu_gallery"
                        android:drawablePadding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="12dp" />

                    <!-- Exercise Suggestions Text -->
                    <TextView
                        android:id="@+id/exerciseSuggestionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading exercise recommendations..."
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="6dp"
                        android:padding="8dp" />

                    <!-- Weekly Schedule -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F5F5F5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“… Weekly Exercise Schedule"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:layout_marginBottom="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8px">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Mon-Wed-Fri"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#666666" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Cardio + Strength"
                                    android:textSize="14sp"
                                    android:textColor="#333333" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8px">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Tue-Thu"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#666666" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Yoga + Stretching"
                                    android:textSize="14sp"
                                    android:textColor="#333333" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Sat-Sun"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#666666" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Rest or Light Walk"
                                    android:textSize="14sp"
                                    android:textColor="#333333" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- New: API Data Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardApiData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#E3F2FD"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“Š Live Exercise Data (API)"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1976D2"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvApiExerciseData"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fetching exercise data..."
                                android:textSize="12sp"
                                android:textColor="#424242"
                                android:lineSpacingExtra="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnFetchApiData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/button_rounded_small"
                            android:text="ðŸ“¡ Fetch API Data"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:padding="8dp" />

                        <Button
                            android:id="@+id/btnViewArticles"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/button_rounded_small"
                            android:text="ðŸŒ Health Articles"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:padding="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise Tips Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Important Tips"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Warm up for 5-10 minutes\nâ€¢ Stay hydrated during exercise\nâ€¢ Listen to your body\nâ€¢ Maintain proper form\nâ€¢ Cool down after workout\nâ€¢ Consult doctor if needed"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:elevation="8dp">

        <!-- Home Button -->
        <Button
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="ðŸ  Home"
            android:textSize="14sp"
            android:textColor="#333333"
            android:drawableTop="@android:drawable/ic_menu_manage"
            android:drawableTint="#4CAF50" />

        <!-- Food Button -->
        <Button
            android:id="@+id/foodButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="ðŸŽ Food"
            android:textSize="14sp"
            android:textColor="#333333"
            android:drawableTop="@android:drawable/ic_menu_camera"
            android:drawableTint="#FF9800" />

        <!-- Exercise Button -->
        <Button
            android:id="@+id/exerciseButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="ðŸ’ª Exercise"
            android:textSize="14sp"
            android:textColor="#333333"
            android:drawableTop="@android:drawable/ic_menu_compass"
            android:drawableTint="#2196F3" />

        <!-- Menu Button -->
        <Button
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="â‹® Menu"
            android:textSize="14sp"
            android:textColor="#333333"
            android:drawableTop="@android:drawable/ic_menu_more"
            android:drawableTint="#9C27B0" />
    </LinearLayout>

</LinearLayout>