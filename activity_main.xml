<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#d3d3c3">
     <!-- Add Toolbar -->
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#b0b098"
    android:minHeight="?attr/actionBarSize"
    app:title="BMI Calculator"
    app:titleTextColor="@android:color/white"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavLayout"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="#b0b098"
                android:gravity="center"
                android:text="BMI Calculator"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:drawableLeft="@android:drawable/ic_menu_info_details"
                android:drawablePadding="8dp" />

            <!-- New Feature: Quick Stats Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#E8F5E9">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_dialog_info"
                        android:tint="#4CAF50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BMI Categories"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Underweight: &lt; 18.5\nNormal: 18.5 - 24.9\nOverweight: 25 - 29.9\nObese: â‰¥ 30"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Weight Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Your Weight:"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <EditText
                    android:id="@+id/teWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Weight in kilograms (kg)"
                    android:layout_margin="16dp"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:inputType="numberDecimal"
                    android:drawableStart="@android:drawable/ic_lock_lock"
                    android:drawablePadding="8dp" />
            </androidx.cardview.widget.CardView>

            <!-- Height Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Your Height:"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feet"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/teHeight_ft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Feet"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:inputType="numberDecimal"
                            android:drawableStart="@android:drawable/ic_menu_my_calendar"
                            android:drawablePadding="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Inches"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/teHeight_inc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Inches"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:inputType="numberDecimal"
                            android:drawableStart="@android:drawable/ic_menu_my_calendar"
                            android:drawablePadding="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Calculate Button -->
            <Button
                android:id="@+id/calculateButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/button_rounded_primary"
                android:text="Calculate BMI"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:drawableStart="@android:drawable/ic_menu_sort_by_size"
                android:drawablePadding="8dp" />

            <!-- New: History Button -->
            <Button
                android:id="@+id/historyButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/button_rounded_secondary"
                android:text="ðŸ“Š View History"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp" />

            <!-- BMI Result Display -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BMI Result"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:drawableStart="@android:drawable/ic_dialog_dialer"
                        android:drawablePadding="8dp" />

                    <TextView
                        android:id="@+id/bmiDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="Enter weight and height to calculate BMI"
                        android:textSize="18sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp" />

                    <!-- BMI Progress Bar -->
                    <ProgressBar
                        android:id="@+id/bmiProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="16dp"
                        android:progress="50"
                        android:progressTint="#4CAF50"
                        android:max="100" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Underweight"
                            android:textSize="10sp"
                            android:textColor="#2196F3"
                            android:gravity="start" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Normal"
                            android:textSize="10sp"
                            android:textColor="#4CAF50"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Overweight"
                            android:textSize="10sp"
                            android:textColor="#FF9800"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Obese"
                            android:textSize="10sp"
                            android:textColor="#F44336"
                            android:gravity="end" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- BMI Scale Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bmimeter"
                android:contentDescription="BMI Scale" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:elevation="8dp">

        <!-- Home Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <Button
                android:id="@+id/homeButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="ðŸ  Home"
                android:textSize="14sp"
                android:textColor="#333333"
                android:drawableTop="@android:drawable/ic_menu_manage"
                android:drawableTint="#4CAF50" />
        </androidx.cardview.widget.CardView>

        <!-- Food Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <Button
                android:id="@+id/foodButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="ðŸŽ Food"
                android:textSize="14sp"
                android:textColor="#333333"
                android:drawableTop="@android:drawable/ic_menu_camera"
                android:drawableTint="#FF9800" />
        </androidx.cardview.widget.CardView>

        <!-- Exercise Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <Button
                android:id="@+id/exerciseButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="ðŸ’ª Exercise"
                android:textSize="14sp"
                android:textColor="#333333"
                android:drawableTop="@android:drawable/ic_menu_compass"
                android:drawableTint="#2196F3" />
        </androidx.cardview.widget.CardView>

        <!-- New: Menu Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <Button
                android:id="@+id/menuButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="â‹® Menu"
                android:textSize="14sp"
                android:textColor="#333333"
                android:drawableTop="@android:drawable/ic_menu_more"
                android:drawableTint="#9C27B0"
                android:onClick="onMenuButtonClick" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>