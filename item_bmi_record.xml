<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        
        <!-- Left Indicator -->
        <View
            android:id="@+id/categoryIndicator"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/category_indicator" />
        
        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/categoryIndicator"
            android:orientation="vertical">
            
            <!-- Date -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>
            
            <!-- BMI Score -->
            <TextView
                android:id="@+id/tvBMIScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BMI: 0.0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp"/>
            
            <!-- Weight & Height -->
            <TextView
                android:id="@+id/tvWeightHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight: 0 kg | Height: 0 ft"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"/>
            
            <!-- Category -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/category_background"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        
    </RelativeLayout>
</androidx.cardview.widget.CardView>